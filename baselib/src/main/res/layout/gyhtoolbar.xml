<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="VectorDrawableCompat"
    android:background="@color/color_blue"
    android:id="@+id/toolbar"
    app:contentInsetLeft="0dp"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_56">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/gyh_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="Title"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_17"
                app:layout_constraintBottom_toBottomOf="@+id/gyh_toolbar_back"
                app:layout_constraintEnd_toStartOf="@+id/gyh_toolbar_menu"
                app:layout_constraintStart_toEndOf="@+id/gyh_toolbar_back"
                app:layout_constraintTop_toTopOf="@+id/gyh_toolbar_back" />

            <ImageView
                android:id="@+id/gyh_toolbar_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_arrow_back" />

            <ImageView
                android:id="@+id/gyh_toolbar_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/gyh_toolbar_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/gyh_toolbar_title"
                app:srcCompat="@drawable/ic_menu" />
        </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.Toolbar>
